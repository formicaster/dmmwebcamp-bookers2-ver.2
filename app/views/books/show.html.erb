<main>
  <p id="notice"><%= flash[:notice] %></p>
    <div class='container'>
      <div class='row'>

        <%= render partial: 'books/list', locals: { user: @book.user, book: @newbook } %>

        <div class='col-md-8 offset-md-1'>
          <h2>Book detail</h2>
  		      <table class='table'>
  		        <tr>
                <td>
                  <%= link_to user_path(@book.user) do %>
                  <%= image_tag @book.user.get_profile_image(100,100)%><br>
                  <%= @book.user.name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path do %>
                  <%= @book.title %>
                  <% end %>
                </td>
                <td><%= @book.body %></td>
                <td>
                   <% if @book.favorited_by?(current_user) %>
                    <%= link_to book_favorites_path(@book), method: :delete do %>
                       <i class="fas fa-heart"></i> <%= @book.favorites.count %>
                    <% end %>
                  <% else %>
                    <%= link_to book_favorites_path(@book), method: :post do %>
                      <i class="far fa-heart"></i> <%= @book.favorites.count %>
                    <% end %>
                  <% end %>
                </td>
                <td>
                  <%= link_to "#{book.book_comments.count} コメント数", book_path(book.id) %>
                </td>
                <% if @book.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@book), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
                <% end %>
              </tr>
            </table>

            <p>コメント数：<%= @book.book_comments.count %></p>
            <% @book.book_comments.each do |book_comment| %>
              <p><%= image_tag book_comment.user.get_profile_image(100, 100) %></p>
              <%= book_comment.user.name %>
              <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
              <% if book_comment.user == current_user %>
                <%= link_to "Destroy", book_post_comment_path(book_comment.book, book_comment), method: :delete %>
              <% end %>
            <% end %>
            <%= form_with model: [@book, @book_comment] do |f| %>
              <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
              <%= f.submit "送信" %>
            <% end %>

        </div>

      </div>
    </div>
</main>
